{
  "name": "root",
  "private": true,
  "scripts": {
    "test": "mocha -r ./babel-register.js __tests__/**/*test*.ts && tsc --noEmit",
    "test:watch": "npm test -- --watch-extensions ts --watch-files src,__tests__/**/*test*.ts,packages/**/*.ts --watch",
    "build": "lerna run build --scope @refract-cms/*",
    "bump-version": "lerna version --no-push --no-git-tag-version",
    "prettier": "prettier --write .",
    "prettier:test": "prettier --check .",
    "dev": "lerna run dev --stream --scope @local/*",
    "predev": "yarn && lerna run pre --stream --scope @local/*",
    "down": "lerna run down --stream --scope @local/*"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "dev/*"
    ],
    "nohoist": [
      "**/razzle",
      "**/razzle-dev-utils",
      "**/webpack-merge"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.12.13",
    "@babel/register": "^7.12.13",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-types": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-bundle-node": "^0.9.2",
    "@pika/plugin-copy-assets": "^0.9.2",
    "@pika/plugin-simple-bin": "^0.9.2",
    "@pika/plugin-standard-pkg": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/react": "^16.9.34",
    "chai": "^4.2.0",
    "lerna": "^3.20.2",
    "mocha": "^8.2.1",
    "prettier": "^2.0.4",
    "prettier-cli": "^0.1.0",
    "ts-node": "^9.1.1",
    "ts-node-test-register": "^9.0.1",
    "typescript": "4.1.3"
  },
  "dependencies": {},
  "resolutions": {
    "typescript": "4.1.3"
  },
  "volta": {
    "node": "14.15.4",
    "yarn": "1.22.10"
  }
}
