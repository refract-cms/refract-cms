{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "preserveSymlinks": true,
    "rootDir": "./",
    "declaration": true
  },
  "exclude": ["**/pkg/**"]
}
